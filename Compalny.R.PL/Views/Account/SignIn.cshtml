<h1>SignIn</h1>

@using Compalny.R.PL.ViewModels
@model SignInViewModel
@{


	ViewData["Title"] = "SignUp";
	Layout = "~/Views/_AuthenticationLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignUp" method="post">
			<input type="email" asp-for="Email" placeholder="Email">

			<input type="password" asp-for="Password" placeholder="Password">



			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Sign Up </a></p>
	</div>
</div>



