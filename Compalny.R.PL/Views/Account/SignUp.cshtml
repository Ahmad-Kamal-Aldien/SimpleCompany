@using Compalny.R.PL.ViewModels
@model SignUpViewModel
@{

	
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/_AuthenticationLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form  asp-action="SignUp" method="post">
			<input type="text" asp-for="UserName" placeholder="Username" >
			<input type="text" asp-for="FirstName" placeholder="FirstName">
			<input type="text" asp-for="LastName" placeholder="LastName">
			<input  type="email" asp-for="Email" placeholder="Email">

			<input  type="password" asp-for="Password" placeholder="Password" >


			<input  type="password" asp-for="ConfirmedPassword" placeholder="Confirm Password" >

			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" >
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="SignIn" > Login Now!</a></p>
	</div>
</div>

