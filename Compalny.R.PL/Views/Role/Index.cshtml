@using Compalny.R.PL.ViewModels
@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>




@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>

                <th>@Html.DisplayNameFor(D => D.id)</th>
                <th>@Html.DisplayNameFor(D => D.RoleName)</th>
               
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>
                        @role.id
                    </td>
                    <td>
                        @role.RoleName
                    </td>
                    

                    <td>
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@role.id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@role.id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@role.id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Role :(</h4>
    </div>
}



