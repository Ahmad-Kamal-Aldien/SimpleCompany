@using Compalny.R.PL.ViewModels
@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemove";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleid= ViewData["RoleId"] as string;
}

<form asp-action="AddOrRemove" asp-route-id="@roleid">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelectes" />
            <label asp-for="@Model[i].IsSelectes">@Model[i].UserName</label>
        </div>
        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].UserName" />

    }
    <input type="submit" value="Update" class="btn btn-danger"/>
    <input type="submit" asp-route-id="@roleid" value="Edit" class="btn btn-light" />

</form>
