<h1>Add</h1>
@using Compalny.R.PL.ViewModels
@using Company.R.DAL.Models

@model EmployeeViewModel
@{
    ViewData["Title"] = "Add";
}



<h2>Create Employee</h2>

<form asp-action="Add" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label  class="col-form-label">Department</label>
    <select name="Dept_id" id="Dept_id" class="form-control">

         

        @foreach (Department dept in ViewBag.Department)
        {
            <option value="@dept.Id">@dept.Name</option>
        }
    
    </select>
    </div>

    <div class="form-group">
        <label asp-for="IsActive" class="form-check"></label>
        <input asp-for="IsActive" class="form-check" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Image" class="col-form-label"></label>
        <input type="file" asp-for="Image" class="form-control" />
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
</form>

