@using Company.R.DAL.Models
@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>




<form asp-action="Edit">


    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>


    <div class="form-group">
        <label class="col-form-label">Department</label>
        <select name="Dept_id" id="Dept_id" class="form-control">


            @foreach (Department dept in ViewBag.Department)
            {
                if (Model.Dept_id == dept.Id)
                {
                    <option selected value="@dept.Id">@dept.Name</option>

                }
                <option  value="@dept.Id">@dept.Name</option>

            }

        </select>
    </div>


    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IsActive" class="col-form-label"></label>
        <input asp-for="IsActive" class="form-check" />
    </div>


    <div class="form-group">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" class="form-control" />
    </div>



    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>











    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section validation{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

